<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<fragment xmlns="http://schemas.haulmont.com/cuba/screen/fragment.xsd"
          xmlns:chart="http://schemas.haulmont.com/charts/charts.xsd" >

    <data>
        <collection id="productDc" class="com.company.untitled.entity.Product">
            <loader id="productDl">
                <query>SELECT p FROM untitled_Product p ORDER BY p.name</query>
            </loader>

        </collection>
    </data>


    <layout>
        <chart:radarChart id="radarChartId"
                          categoryField="first_name"
                          dataContainer="productDc"
                          height="100%"
                          startDuration="2"
                          theme="PATTERNS"
                          borderColor="GOLD"
                          width="100%">

            <chart:valueAxes>
                <chart:axis autoGridCount="false"
                            axisAlpha="0.2"
                            fillAlpha="0.05"
                            fillColor="WHITE"
                            gridAlpha="0.08"
                            gridType="CIRCLES"
                            minimum="0"
                            position="LEFT">
                    <chart:guides>
                        <chart:guide angle="255"
                                     fillAlpha="0.3"
                                     fillColor="#0066CC"
                                     lineAlpha="0"
                                     tickLength="0"
                                     toAngle="315"
                                     toValue="60"
                                     value="0"/>
                        <chart:guide angle="45"
                                     fillAlpha="0.3"
                                     fillColor="#CC3333"
                                     lineAlpha="0"
                                     tickLength="0"
                                     toAngle="135"
                                     toValue="60"
                                     value="0"/>
                    </chart:guides>
                </chart:axis>
            </chart:valueAxes>

            <chart:graphs>
                <chart:graph balloonText="[[first_name]] [[last_name]] назнаачено [[value]] часов работы"
                             title="Количество часов"
                             bullet="ROUND"
                             valueField="count_hours"/>
            </chart:graphs>
            <chart:titles>
                <chart:title alpha="1"
                             bold="true"
                             color="DARKSLATEGREY"
                             size="20"
                             tabIndex="0"
                             text="График пользователей"/>
                <chart:title alpha="0.5"
                             color="DARKGREEN"
                             size="12"
                             text="Количество назначенных Пользователю часов"/>
            </chart:titles>
            <chart:legend autoMargins="true"
                          marginBottom="20"
                          marginLeft="100"
                          markerType="CIRCLE"
                          position="TOP"
                          valueText="[[category]]"/>
            <chart:export/>
        </chart:radarChart>









    </layout>
</fragment>
